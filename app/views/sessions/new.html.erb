<h1>Sign In</h1>

<%= form_tag signin_path, method: :post do %>
  <% if flash[:alert] %>
    <p class="form-errors alert alert-danger">
      <%= flash[:alert] %>
    </p>
  <% end %>

  <div class="form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: 'form-control' %>
  </div>

  <p>
    <%= submit_tag 'Sign In', class: 'btn btn-primary btn-block' %>
  </p>
<% end %>

No account? <%= link_to 'Sign Up now!', signup_path %>
