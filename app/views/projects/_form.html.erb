<%= form_for [@context, @project] do |f| %>
  <% if @project.errors.any? %>
    <p class="errors">
      <% @project.errors.full_messages.each do |error| %>
        <%= error %>
      <% end %>
    </p>
  <% end %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :today, 'For today?' %>
    <%= f.check_box :today %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
