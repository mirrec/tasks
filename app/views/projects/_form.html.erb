<%= form_for [@context, @project] do |f| %>
  <%= render 'application/form_errors', object: f.object %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :today, 'For today?' %>
    <%= f.check_box :today %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
