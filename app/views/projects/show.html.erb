<h1>
  <%= @project.name %>
</h1>
<p class="description">
  <%= @project.description %>
</p>

<%= link_to 'Edit Project', edit_project_path(@project) %>

<%= form_for [@project, Task.new] do |f| %>
  <%= f.text_field :name %>

  <%= f.submit %>
<% end %>

<hr>

<%= render @project.uncompleted_tasks %>

<% if @project.completed_tasks.any? %>
  <h3>Completed</h3>

  <div class="completed-tasks">
    <%= render @project.completed_tasks %>
  </div>
<% end %>
