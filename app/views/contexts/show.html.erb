<h1><%= @context.name %></h1>

<%= link_to 'Edit Context', edit_context_path(@context) %>
<%= link_to 'Delete Context', context_path(@context), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'New Project', new_context_project_path(@context) %>

<h3>Today</h3>
<div class="today">
  <% if @context.projects.for_today.any? %>
    <%= render @context.projects.for_today %>
<% else %>
    <strong>Nothing for today</strong>
<% end %>
</div>


<% if @context.projects.not_for_today.any? %>
  <h3>Later</h3>

<%= render @context.projects.not_for_today %>
<% end %>
